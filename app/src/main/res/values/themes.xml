<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.EntregableFinal" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/on</item>
        <item name="colorPrimaryVariant">@color/oo</item>
        <item name="colorOnPrimary">@color/bb</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/os</item>
        <item name="colorSecondaryVariant">@color/oi</item>
        <item name="colorOnSecondary">@color/nn</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:navigationBarColor">@color/on</item>
        <item name="fontFamily">@font/appnimal</item>
        <item name="android:fontFamily">@font/appnimal</item>
    </style>
    <style name="MaterialAlertDialog__Center" parent="@style/ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="materialAlertDialogTitlePanelStyle">@style/Title.Panel.Center</item>
        <item name="materialAlertDialogBodyTextStyle">@style/Message.Center</item>
    </style>
    <style name="Title.Panel.Center" parent="MaterialAlertDialog.MaterialComponents.Title.Panel">
        <item name="android:gravity">center_horizontal</item>
    </style>
    <style name="Message.Center" parent="MaterialAlertDialog.MaterialComponents.Body.Text">
        <item name="android:gravity">center_horizontal</item>
    </style>
</resources>