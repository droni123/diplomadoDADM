<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ejerciciosclase.fragments.botonnavegacion.BotonNavegacionActivity">
    <FrameLayout
        android:id="@+id/c5root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/c5menu"
        android:layout_alignParentTop="true"
        android:background="@color/blanco" />
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/c5menu"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/azul_o"
        app:menu="@menu/btn_menu"
        android:padding="10dp"
        app:labelVisibilityMode="selected"
        android:elevation="50sp"
        />
</RelativeLayout>