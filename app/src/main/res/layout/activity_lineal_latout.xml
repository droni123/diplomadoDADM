<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="top"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_weight="2"
        android:layout_height="0dp"
        android:text="Ejemplo de LinerLayout 1"
        android:padding="25dp"
        android:textColor="@color/dorado_c"
        android:background="@color/azul_o"
        android:textSize="20sp"
        android:gravity="center"
        >
    </TextView>
    <TextView
        android:layout_width="match_parent"
        android:layout_weight="1.5"
        android:layout_height="0dp"
        android:text="Ejemplo de LinerLayout 2"
        android:padding="25dp"
        android:textColor="@color/blanco"
        android:background="@color/azul_c"
        android:textSize="20sp"
        android:gravity="center"
        >
    </TextView>
    <TextView
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp"
        android:text="Ejemplo de LinerLayout 3"
        android:padding="25dp"
        android:textColor="@color/blanco"
        android:background="@color/negro"
        android:textSize="20sp"
        android:gravity="center"
        >
    </TextView>
</LinearLayout>